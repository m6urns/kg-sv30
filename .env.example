# Example .env file - copy to .env and modify as needed
# This file contains environment variables for configuring the application

# Flask environment: development, testing, or production
FLASK_ENV=development

# Server configuration
HOST=0.0.0.0
PORT=5000

# Security
SECRET_KEY=generate-a-secure-random-key-here
CORS_ORIGINS=http://localhost:5000,https://yourdomain.com

# Logging
LOG_LEVEL=INFO

# Gunicorn configuration (only used in production)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
GUNICORN_MAX_REQUESTS=1000